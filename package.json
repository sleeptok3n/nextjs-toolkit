{
  "name": "nextjs-toolkit",
  "version": "2.1.0",
  "description": "Production-ready utilities, middleware, and patterns for Next.js applications. Auth guards, API helpers, caching strategies, security headers, and more.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.mjs",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./middleware": {
      "import": "./dist/middleware/index.mjs",
      "require": "./dist/middleware/index.js",
      "types": "./dist/middleware/index.d.ts"
    },
    "./api": {
      "import": "./dist/api/index.mjs",
      "require": "./dist/api/index.js",
      "types": "./dist/api/index.d.ts"
    },
    "./cache": {
      "import": "./dist/cache/index.mjs",
      "require": "./dist/cache/index.js",
      "types": "./dist/cache/index.d.ts"
    },
    "./config": {
      "import": "./dist/config/index.mjs",
      "require": "./dist/config/index.js",
      "types": "./dist/config/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "nextjs",
    "next.js",
    "next",
    "react",
    "toolkit",
    "utilities",
    "middleware",
    "helpers",
    "auth",
    "authentication",
    "api-routes",
    "route-handlers",
    "caching",
    "security",
    "headers",
    "rate-limiting",
    "server-components",
    "app-router"
  ],
  "author": "sleeptok3n",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sleeptok3n/nextjs-toolkit.git"
  },
  "bugs": {
    "url": "https://github.com/sleeptok3n/nextjs-toolkit/issues"
  },
  "homepage": "https://github.com/sleeptok3n/nextjs-toolkit#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "next": ">=13.0.0",
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "eslint": "^8.56.0",
    "next": "^15.0.0",
    "react": "^19.0.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  }
}
